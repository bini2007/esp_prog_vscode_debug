    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
			"name": "ESP-Prog Debug",
			"type": "gdb",
			"request": "launch",
			"target": "./build/esp_prog_vscode_debug.elf",
			"cwd": "${workspaceRoot}",
			"env": {
				"PATH": "${config:esp_dev_env_path}:${env:PATH}"
			},
			"gdbpath": "xtensa-esp32-elf-gdb",
			"preLaunchTask": "Launch OpenOCD GDB Server",
			"autorun": [
				"target extended-remote :3333",
				"mon reset halt",
				"flushregs",
				"thb app_main",
				"c",
				"monitor [target current] configure -event gdb-detach { shutdown }",
			],
		}
    ]
}
